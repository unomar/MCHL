<resources>

    <style name="NoActionBar" parent="@android:style/Theme.NoTitleBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="MCHLTheme" parent="Theme.AppCompat.DayNight">

        <!-- Uncomment to override default BG colors.
        <item name="android:colorBackground">@color/backgroundDefault</item> -->

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
