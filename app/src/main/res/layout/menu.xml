<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/widget124"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<ImageView android:id="@+id/mchl_header"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:padding="40px" android:paddingBottom="20px" android:src="@drawable/logo"
		android:gravity="center" android:layout_alignParentTop="true">
	</ImageView>
	<LinearLayout android:orientation="horizontal"
		android:layout_below="@+id/mchl_header" android:layout_height="fill_parent"
		android:layout_width="fill_parent">
		<LinearLayout android:orientation="vertical"
			android:layout_below="@+id/mchl_header" android:layout_weight=".5"
			android:layout_height="fill_parent" android:layout_width="fill_parent">

			<LinearLayout android:id="@+id/Standings"
				android:onClick="showStandings" android:background="@drawable/button"
				android:gravity="center" android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:layout_weight=".5"
				android:orientation="vertical">
				<ImageView android:src="@drawable/standings"
					android:onClick="showStandings" android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:gravity="center" />
				<TextView android:id="@+id/standings" style="@style/MenuFont"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:text="Standings" />
			</LinearLayout>

			<LinearLayout android:id="@+id/Config" android:onClick="showConfig"
				android:background="@drawable/button" android:gravity="center"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:layout_weight=".5" android:orientation="vertical">
				<ImageView android:src="@drawable/settings"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:gravity="center" />
				<TextView android:id="@+id/config" style="@style/MenuFont"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:text="Configure" />
			</LinearLayout>

		</LinearLayout>
		<LinearLayout android:orientation="vertical"
			android:layout_below="@+id/mchl_header" android:layout_height="fill_parent"
			android:layout_weight=".5" android:layout_width="fill_parent">
			<LinearLayout android:id="@+id/Schedule"
				android:onClick="showSchedule" android:background="@drawable/button"
				android:gravity="center" android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:layout_weight=".5"
				android:orientation="vertical">
				<ImageView android:src="@drawable/schedule"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:gravity="center" />
				<TextView android:id="@+id/schedule" style="@style/MenuFont"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:text="Schedule" />
			</LinearLayout>

			<LinearLayout android:id="@+id/Exit" android:onClick="exit"
				android:background="@drawable/button" android:gravity="center"
				android:layout_alignParentRight="true" android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:layout_weight=".5"
				android:orientation="vertical">
				<ImageView android:src="@drawable/exit"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:gravity="center" />
				<TextView android:id="@+id/exit" style="@style/MenuFont"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:text="Exit" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>