<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playerRow"
    style="@style/TableBorders"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/playerRowName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="1px"
        android:layout_weight="50"
        android:gravity="start"
        android:text="@string/Name" />

    <TextView
        android:id="@+id/playerGamesPlayed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="1px"
        android:layout_weight="10"
        android:gravity="center"
        android:text="@string/gamesPlayedHeader" />

    <TextView
        android:id="@+id/playerGoals"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="1px"
        android:layout_weight="10"
        android:gravity="center"
        android:text="@string/Goals" />

    <TextView
        android:id="@+id/playerAssists"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="1px"
        android:layout_weight="10"
        android:gravity="center"
        android:text="@string/Assists" />

    <TextView
        android:id="@+id/playerPoints"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="1px"
        android:layout_weight="10"
        android:gravity="center"
        android:text="@string/pointsHeader" />

    <TextView
        android:id="@+id/playerPims"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="1px"
        android:layout_weight="10"
        android:gravity="center"
        android:text="@string/pimHeader" />
</TableRow>
